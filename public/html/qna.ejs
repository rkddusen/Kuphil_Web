            <script>
                let small_menu_open = document.getElementsByClassName("small_menu_open")[0];
                function smallOpen() {
                    small_menu_open.style.display = 'block';
                }
                function smallClose() {
                    small_menu_open.style.display = 'none';
                }
            </script>
        </div>
        <article>
            <div class="head3_line_f"></div>
            <div class="head3_name"><a class="head3_qna_a" href="../qna">쿠필 지식인</a></div>
            <div class="head3_line_s"></div>
        </article>
    </header>

    <!-- 내용 -->
    <div class="qna_section">
        <div class="qna_write">
            <button onclick="qna_question_add();">작성하기</button>
        </div>
        
        <div class="qna_contents">
            <div class="qna_question_add">
                <form action="/qna/questionSubmit" method="post" onsubmit="return questionDoAction();">
                    <strong>Q.</strong><br>
                    <input type="text" class="qna_question_add_title" name="qna_title" placeholder="제목을 작성하세요."/><br>
                    <textarea class="qna_question_add_textarea" placeholder="질문을 작성하세요." name="qna_question"></textarea><br>
                    <div>
                        <input type="submit" name="submit" class="qna_question_add_subCan" value="작성"/>
                        <input type="button" name="cancel" onclick="qna_question_add_cancel();" value="취소" class="qna_question_add_subCan"/>
                    </div>
                </form>
            </div>
            <% for(var i=0; i < page_num; i++) { 
                if(number-((page-1)*10)-i>0){ %>
                    <div class="qna_entry" onclick="location.href='./read/<%=number-((page-1)*10)-i%>'">
                        <div>  
                            <span><%= qna_title[i] %></span>
                            <p><%= qna_question[i] %></p>
                        </div>
                        <div>
                            <span>답변 <%= qna_answer_num[i] %></span>&ensp;&ensp;
                            <span>등록 <%= qna_date[i] %></span>
                        </div>
                    </div>
                <% }
            } %>
        </div>
    </div>

    <!-- 페이지 넘길 수 있음 -->
    <table class="qna_page">
        <tr>
            <td><a id="prev" href="/qna/<%= (page - 1) %>">이전</a></td>
                <% let pageStartNum=Math.floor((page-1)/page_num);
                let pageEndNum=(number/page_num-1)%10+1;
                for(var j=pageStartNum*10; j <=pageStartNum*10+pageEndNum; j++){ %>
                    <td><a id="num_<%= j + 1 %>" href="/qna/<%= j + 1 %>">
                        <%= j + 1 %>
                        </a></td>
                <% } %>
            <td><a id="next" href="/qna/<%= (parseInt(page)+1) %>">다음</a></td>
        </tr>
        </table>
        <script>
            document.getElementById("num_" + "<%= page %>").style.color = 'red';
            if ("<%= page %>" <= 1) {
                document.getElementById("prev").style.color = 'grey';
                document.getElementById("prev").setAttribute("onclick", "return false;");
            }
            if ("<%= page %>">=parseInt("<%=number/page_num%>")) {
                document.getElementById("next").style.color = 'grey';
                document.getElementById("next").setAttribute("onclick", "return false;");
            }
        </script>
    </div>

