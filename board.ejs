        <!-- <article class="head3_board">
            <hr class="front_hr"><p><a class="head3_board_a" href="../board">게시판</a> &ensp;|&ensp; <a class="head3_album_a" href="../album">사진첩</a></p><hr class="back_hr_board">
        </article> -->
        <article>
            <div class="head3_line_f"></div>
            <div class="head3_name"><a class="head3_board_a" href="../board">게시판</a></div>
            <div class="head3_line_s"></div>
        </article>
    </header>
    
    <!-- 글쓰기 -->
    
    <section class="board_part">
        <div class="board_plus"onclick="location.href='./write'">
            글쓰기
        </div>
        <!-- 게시판 테이블 -->
        <table class="board_table">
            <thead>
                <tr>
                    <td class="td_no" style="width: 70px;">No.</td>
                    <td class="td_title" style="width: 500px;">제목</td>
                    <td class="td_writer" style="width: 150px;">작성자</td>
                    <td class="td_date" style="width: 150px;">날짜</td>
                </tr>
            </thead>
            <tbody class="board_body">
                <%
                for(var i = 0; i < page_num; i++) {
                if(number-((page-1)*10)-i<=0){
                %>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <%
                }else{
                %>
                <tr onclick="location.href='../read/<%=number-((page-1)*10)-i%>'">
                    <td><%= number-((page-1)*10)-i %></td>
                    <td ><%= data[i].split("//")[0] %></td>
                    <td><%= data[i].split("//")[1] %></td>
                    <td><%= data[i].split("//")[2].split(" ")[0] %></td>
                </tr>
                <%
                    }
                }
                %>

            </tbody>
        </table>
        <!-- 게시판 넘기는 번호 -->
        <table class="board_number">
            <tr>
                <td><a id="prev" href="/board/<%= (page - 1) %>">이전</a></td>
                    <%
                    let pageStartNum=Math.floor((page-1)/page_num);
                    let pageEndNum=(number/page_num-1)%10+1;
                    for(var j = pageStartNum*10; j <= pageStartNum*10+pageEndNum; j++){
                    %>
                    <td><a id="num_<%= j + 1 %>" href="/board/<%= j + 1 %>"><%= j + 1 %></a></td>
                    <%
                    }
                    %>
                    <td><a id="next" href="/board/<%= (parseInt(page)+1) %>">다음</a></td>
                    <script>
                        document.getElementById("num_"+"<%= page %>").style.color='red';
                        if("<%= page %>"<=1){
                            document.getElementById("prev").style.color='grey';
                            document.getElementById("prev").setAttribute("onclick", "return false;");
                        }
                        else if("<%= page %>">="<%=number/page_num%>"){
                            document.getElementById("next").style.color='grey';
                            document.getElementById("next").setAttribute("onclick", "return false;");
                        }
                        
                    </script>
            </tr>
        </table>
    </section>

    <!-- 푸터 -->
    <footer>
        <div class="footer_first">
                <li><a href="#">오시는 길</a></li>
                <li><a href="#">이용 약관</a></li>
