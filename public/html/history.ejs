    <p id="SelectYear">
        <button class=Years id="year1" type="button">2003~</button>
        <button class=Years id="year2" type="button">2005~</button>
        <button class=Years id="year3" type="button">2010~</button>
        <button class=Years id="year4" type="button">2015~</button>
        <button class=Years id="year5" type="button">2020~</button>
    </p>

    <div id="historyyyyyyy" class="back">
        <div class="year1">
            <% for(let x = 0; x < 2; x++){ 
                if(activity.length ==0){ break; } else{ %>
                    <section><%=activity[0].year%></section>
                    <p>
                        <% for(let i = 0; i < activity.length; i++){
                            if(activity[0].year > 2003 + x){ break; } else{ %>
                                <span class="date"><%= activity[0].month %> <%= activity[0].day %></span> <span class="context"><%= activity[0].context %></span><br>
                            <% } activity.shift(); 
                        } %>
                    </p>
                <% } 
            } %>
        </div>

        <div class="year2">
            <% for(let x = 0; x < 5; x++){ 
                if(activity.length ==0){ break; } else{ %>
                    <section><%=activity[0].year%></section>
                    <p>
                        <% for(let i = 0; i < activity.length; i++){
                            if(activity[0].year > 2005 + x){ break; } else{ %>
                                <span class="date"><%= activity[0].month %> <%= activity[0].day %></span> <span class="context"><%= activity[0].context %></span><br>
                            <% } activity.shift(); 
                        } %>
                    </p>
                <% } 
            } %>
        </div>

        <div class="year3">
            <% for(let x = 0; x < 5; x++){ 
                if(activity.length ==0){ break; } else{ %>
                    <section><%=activity[0].year%></section>
                    <p>
                        <% for(let i = 0; i < activity.length; i++){
                            if(activity[0].year > 2010 + x){ break; } else{ %>
